<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="myProgress"
            type="android.databinding.ObservableInt" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用 InverseBindingAdapter 方式："
            android:textColor="@color/color_converter_color2"
            android:textSize="@dimen/default_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_line_space"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前值："
                android:textColor="@color/color_main_text"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(myProgress.get())}"
                android:textColor="@color/color_red_text"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>

        <com.renj.databinding.weight.MySeekBar
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/default_padding"
            app:myProgress="@={myProgress.get()}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/color_main_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用 InverseBindingMethods 方式："
            android:textColor="@color/color_converter_color2"
            android:textSize="@dimen/default_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_line_space"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前值："
                android:textColor="@color/color_main_text"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(myProgress.get())}"
                android:textColor="@color/color_red_text"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>

        <com.renj.databinding.weight.MySeekBar2
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/default_padding"
            app:myProgress2="@={myProgress.get()}" />

    </LinearLayout>

</layout>