<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.renj.databinding.activity.MainActivity.Presenter" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_data}"
                android:onClick="@{presenter::openDataBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_event}"
                android:onClick="@{presenter::openEventBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_collection}"
                android:onClick="@{presenter::openCollectionBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_list}"
                android:onClick="@{presenter::openListBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_include}"
                android:onClick="@{presenter::openIncludeBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_view_stub}"
                android:onClick="@{presenter::openViewStubBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_custom}"
                android:onClick="@{presenter::openCustomBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/binding_converters}"
                android:onClick="@{presenter::openConvertersBindingActivity}"
                android:textAllCaps="false"
                android:textColor="@{@color/color_default_text}"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/binding_component"
                android:textAllCaps="false"
                android:onClick="@{presenter::changeComponent}"
                android:textColor="@color/color_default_text"
                android:textSize="16sp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>